<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:scrollbars="none">
       <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/black3"/>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/layout_profile_view"
               android:layout_marginTop="10dp"
               android:background="@drawable/setting_item_selector"
               android:paddingBottom="10dp"
               android:paddingTop="10dp"
               >
                <ImageView
                    android:id="@+id/iv_profile_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/default_hd_avatar"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
               <TextView
                   android:id="@+id/tv_profile_nick"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:layout_toRightOf="@id/iv_profile_avatar"
                   android:text="zhangsan"
                   android:textSize="18sp"
                   />
               <TextView
                   android:id="@+id/tv_profile_username"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:layout_below="@id/tv_profile_nick"
                   android:layout_toRightOf="@id/iv_profile_avatar"
                   android:text="zhangsan"
                   android:textSize="12sp"
                   />
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/right"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="15dp"
                   />
           </RelativeLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/black3"
               />
           <TextView
               android:id="@+id/tv_profile_album"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:drawableLeft="@drawable/icon_me_photo"
               android:text="@string/profile_txt_album"
               android:layout_marginTop="20dp"
               style="@style/list_txt_Style_without_right"/>
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/black3"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               />
           <TextView
               android:id="@+id/tv_profile_collect"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:drawableLeft="@drawable/icon_me_collect"
               android:text="@string/profile_txt_collect"
               style="@style/list_txt_Style_without_right"/>
           <TextView
               android:id="@+id/tv_profile_money"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:drawableLeft="@drawable/icon_me_money"
               android:text="@string/profile_txt_money"
               android:layout_marginTop="20dp"
               style="@style/list_txt_Style_without_right"/>

           <TextView
               android:id="@+id/tv_profile_smail"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:drawableLeft="@drawable/icon_me_smail"
               android:text="@string/profile_txt_smail"
               android:layout_marginTop="20dp"
               style="@style/list_txt_Style_without_right"/>
           <TextView
               android:id="@+id/tv_profile_setting"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:drawableLeft="@drawable/icon_me_setting"
               android:text="@string/profile_txt_setting"
               android:layout_marginTop="20dp"
               style="@style/list_txt_Style_without_right"/>
       </LinearLayout>
   </ScrollView>
</LinearLayout>
